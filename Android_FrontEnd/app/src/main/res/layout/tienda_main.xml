<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondoPantalla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TiendaActivity">

    <TextView
        android:id="@+id/tienda_textPou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POU"
        android:textColor="#000000"
        android:textSize="68dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tienda_textLasAventurasDe" />

    <TextView
        android:id="@+id/tienda_textLasAventurasDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="LAS AVENTURAS DE"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tienda_botonVerArticulos"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:backgroundTint="#730000"
        android:text="VER ARTICULOS"
        android:textSize="20dp"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        android:onClick="verArticulos" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="400dp"
        android:layout_height="405dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tienda_textPou">

        <TableLayout
            android:id="@+id/tablaArticulos"
            android:layout_width="match_parent"
            android:layout_height="544dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:id="@+id/filaArticulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/columna_nombreArticulo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_idArticulo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="ID"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_precioArticulo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:text="€"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_tipoArticulo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.125"
                    android:gravity="center"
                    android:text="Tipo"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_recargaHambre"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Hambre"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_recargaSalud"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"
                    android:gravity="center"
                    android:text="Salud"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_recargaDiversion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Diversion"
                    android:textColor="#730000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columna_recargaSueno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.18"
                    android:gravity="center"
                    android:text="Sueño"
                    android:textColor="#730000"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>