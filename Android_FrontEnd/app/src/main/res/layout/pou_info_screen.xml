<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    tools:context=".Activities.Activity_Pou_Info">

    <Button
        android:id="@+id/botonLogout"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/color10"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:onClick="clickLogout"
        android:text="LOGOUT"
        android:textSize="26dp"
        app:cornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_correo_info"
        tools:ignore="UsingOnClickInXml" />

    <TextView
        android:id="@+id/titulo_correo_info"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pou_font"
        android:gravity="right"
        android:text="Correo"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_nacimiento_info" />

    <TextView
        android:id="@+id/correo_info"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pou_font"
        android:gravity="left"
        android:text="victor@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/titulo_correo_info"
        app:layout_constraintTop_toBottomOf="@+id/nacimiento_info" />

    <TextView
        android:id="@+id/titulo_nacimiento_info"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pou_font"
        android:gravity="right"
        android:text="Nacimiento"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_nombre_info" />

    <TextView
        android:id="@+id/nacimiento_info"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pou_font"
        android:gravity="left"
        android:text="13/06/2001"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/titulo_nacimiento_info"
        app:layout_constraintTop_toBottomOf="@+id/nombre_info" />

    <TextView
        android:id="@+id/titulo_nombre_info"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pou_font"
        android:gravity="right"
        android:text="Nombre "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_id_info" />

    <TextView
        android:id="@+id/nombre_info"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pou_font"
        android:gravity="left"
        android:text="Victor"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/titulo_nombre_info"
        app:layout_constraintTop_toBottomOf="@+id/id_info" />

    <TextView
        android:id="@+id/id_info"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pou_font"
        android:gravity="left"
        android:text="Victor el guapo"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/titulo_id_info"
        app:layout_constraintTop_toBottomOf="@+id/btn_derecha_info" />

    <TextView
        android:id="@+id/titulo_id_info"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/pou_font"
        android:gravity="right"
        android:text="Pou ID"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_izquierda_info" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="74dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/display_barra_superior" />

    <TextView
        android:id="@+id/diversion_info"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/sueno_info"
        app:layout_constraintTop_toTopOf="@+id/salud_info" />

    <TextView
        android:id="@+id/titulo_info"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="INFO"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_izquierda_info"
        app:layout_constraintEnd_toStartOf="@+id/btn_derecha_info"
        app:layout_constraintStart_toEndOf="@+id/btn_izquierda_info"
        app:layout_constraintTop_toTopOf="@+id/btn_izquierda_info" />

    <TextView
        android:id="@+id/hambre_info"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/salud_info"
        app:layout_constraintStart_toEndOf="@+id/dinero_info"
        app:layout_constraintTop_toTopOf="@+id/dinero_info" />

    <TextView
        android:id="@+id/dinero_info"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="1000"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/sueno_info"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diversion_info" />

    <TextView
        android:id="@+id/salud_info"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:fontFamily="@font/pou_font"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/diversion_info"
        app:layout_constraintTop_toTopOf="@+id/hambre_info" />

    <ImageButton
        android:id="@+id/btn_derecha_info"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:onClick="btnRight"
        android:background="@drawable/display_right_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_izquierda_info"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btn_izquierda_info"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="btnLeft"
        android:background="@drawable/display_left_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salud_info"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>